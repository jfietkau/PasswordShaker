{

  "manifest_version": 2,
  "name": "PasswordShaker",
  "version": "0.1",

  "description": "Generates site-specific passwords for you automatically, based on one master password.",

  "icons": {
    "48": "icons/shaker.svg"
  },

  "permissions": [
    "activeTab", "contextMenus", "storage"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "settings.html"
  }

}
